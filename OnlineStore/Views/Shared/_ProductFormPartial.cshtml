@model ProductFormModel

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-area="" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" placeholder="Name..." />
                <span asp-validation-for="Name" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <input asp-for="Description" class="form-control" placeholder="Description..." />
                <span asp-validation-for="Description" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-control" placeholder="Price..." />
                <span asp-validation-for="Price" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StockQuantity"></label>
                <input asp-for="StockQuantity" class="form-control" placeholder="StockQuantity..." />
                <span asp-validation-for="StockQuantity" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SuitableSeason"></label>
                <select asp-for="SuitableSeason" class="form-control">
                    <option value="">Select Season</option>
                    <option value="0">Winter</option>
                    <option value="1">Spring</option>
                    <option value="2">Summer</option>
                    <option value="3">Autumn</option>
                </select>
                <span asp-validation-for="SuitableSeason" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label for="images">Upload Images:</label>
                <input type="file" name="images" id="images" multiple />
            </div>
            <div class="form-group">
                <label asp-for="CategoryId"></label>
                <select asp-for="CategoryId" class="form-control">
                    @foreach (var category in Model.Categories)
                    {
                        <option value="@category.Id">@category.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="BrandId"></label>
                <select asp-for="BrandId" class="form-control">
                    @foreach (var brand in Model.Brands)
                    {
                        <option value="@brand.Id">@brand.Name</option>
                    }
                </select>
            </div>
             <div class="form-group">
                <label>Select Colors:</label>
                <div class="d-flex flex-wrap">
                    @foreach (var color in Model.Colors)
                    {
                        <div class="form-check form-check-inline">
                            <input type="checkbox" name="selectedColorIds" value="@color.ColorId" id="@color.ColorId" class="form-check-input" />
                            <label for="@color.ColorId" class="form-check-label">@color.ColorName</label>
                        </div>
                    }
                </div>
            </div>
            <div class="form-group">
                <label>Select Sizes:</label>
                <div class="d-flex flex-wrap">
                    @foreach (var size in Model.Sizes)
                    {
                        <div class="form-check form-check-inline">
                            <input type="checkbox" name="selectedSizeIds" value="@size.SizeId" id="@size.SizeId" class="form-check-input" />
                            <label for="@size.SizeId" class="form-check-label">@size.SizeName</label>
                        </div>
                    }
                </div>
            </div> 
            <div class="text-center">
                <input class="btn btn-primary mt-3" type="submit" value="Save" />
            </div>
        </form>
    </div>
</div>
